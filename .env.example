# ===========================================
# Google Workspace Email Backup - Environment Template
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gws_backup_yourdomain
DB_USER=root
DB_PASSWORD=

# For SQLite (Windows development):
# DB_TYPE=sqlite
# DB_FILE=./backend/data/database.sqlite

# Redis (optional - in-memory used if not set)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Google OAuth2 Configuration
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./your-service-account-key.json

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# File Storage
BACKUP_DIR=./backup

# Logging
LOG_LEVEL=info

# Frontend API URL (update after deployment)
REACT_APP_API_URL=http://localhost:3001

