# ===========================================
# Google Workspace Email Backup - Environment Template
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gws_backup_yourdomain
DB_USER=root
DB_PASSWORD=

# For SQLite (Windows development):
# DB_TYPE=sqlite
# DB_FILE=./backend/data/database.sqlite

# Redis (optional - in-memory used if not set)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Google OAuth2 Configuration
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=./your-service-account-key.json

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# File Storage
BACKUP_DIR=./backup

# Logging
LOG_LEVEL=info

# ===========================================
# SEQUENTIAL IMAP CONFIGURATION (Recommended)
# ===========================================
# Sequential IMAP mode ensures only 1 active connection at a time
# This prevents service account conflicts and improves reliability

# Maximum concurrent IMAP connections (1 = sequential mode)
MAX_CONCURRENT_CONNECTIONS=1

# Batch processing configuration
BATCH_SIZE=100
FETCH_TIMEOUT=120000
RETRY_DELAY=2000

# Backup configuration (sequential mode)
BACKUP_INTERVAL=60
MAX_CONCURRENT_USERS=1
BATCH_DELAY=2000

# ===========================================
# DEVELOPMENT/PRODUCTION MODES
# ===========================================
# Development mode (simulated Gmail - no real connections)
# USE_REAL_GMAIL=false

# Production mode (real Gmail connections)
USE_REAL_GMAIL=true

# Frontend API URL (update after deployment)
REACT_APP_API_URL=http://localhost:3001
